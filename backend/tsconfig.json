{
    "compilerOptions": {
      "target": "ES2020",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
     
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
  "node_modules",
  "src/frontend",        
  "**/*.test.ts",
  "**/*.spec.ts"
]

  }
  